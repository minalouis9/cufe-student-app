<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/activity_padding_horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/deadlineCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgray"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="2dp"
            android:layout_marginLeft="0dp">

            <ImageView
                android:id="@+id/News_Image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/padding_10"
                android:padding="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/TitleNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/News_Image"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DescriptionOfNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TitleNews"
                android:layout_toRightOf="@id/News_Image"
                android:maxLines="3"
                android:layout_alignParentRight="true"
                android:textColor="@color/oil"
                android:text=""
                android:textSize="25dp" />

            <TextView
                android:id="@+id/PublicationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DescriptionOfNews"
                android:layout_toRightOf="@id/News_Image"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/midnightBlue"
                android:textSize="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>