<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/activity_padding_horizontal"
    android:paddingBottom="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        cardBackgroundColor="@color/timetableCard">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/lightgray">

                    <TextView
                        android:id="@+id/CourseName_Trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title of Course"
                        android:textSize="24sp"
                        android:textColor="@color/darkblue"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="centerCrop"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/Term_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:layout_marginLeft="5dp"
                        android:text="First Term:     "
                        android:textColor="@color/oil"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:layout_below="@id/CourseName_Trans"/>
                    <TextView
                        android:id="@+id/Term_1_Res_Trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:layout_marginLeft="5dp"
                        android:text=" 150 out of 150"
                        android:textColor="@color/jet"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_below="@id/CourseName_Trans"
                        android:layout_toRightOf="@+id/Term_1"
                        android:textDirection="rtl"
                        />
                    <TextView
                        android:id="@+id/Term_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:layout_marginLeft="5dp"
                        android:text="Second Term:"
                        android:textColor="@color/oil"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:layout_below="@id/Term_1"/>
                    <TextView
                        android:id="@+id/Term_2_Res_Trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:layout_marginLeft="5dp"
                        android:text="150 out of 150"
                        android:textColor="@color/jet"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_below="@id/Term_1_Res_Trans"
                        android:layout_toRightOf="@+id/Term_2"
                        android:textDirection="rtl"
                        />
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:layout_marginLeft="5dp"
                        android:text="Total:               "
                        android:textColor="@color/oil"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:layout_below="@id/Term_2"/>
                    <TextView
                        android:id="@+id/Total_Res_Trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="2"
                        android:layout_marginLeft="5dp"
                        android:text="150 out of 150"
                        android:textColor="@color/Punch"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_below="@id/Term_2_Res_Trans"
                        android:layout_toRightOf="@+id/total"
                        android:textDirection="rtl"
                        />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>