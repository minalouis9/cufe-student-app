<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009696"
        android:scaleType="fitXY"
        tools:context="com.example.minal.studentapp.NewDeadline"
        tools:layout_editor_absoluteY="25dp">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollViewNewDead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >


    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Header_Text"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/midnightBlue"
                android:backgroundTint="@color/midnightBlue"
                android:ems="10"
                android:inputType="none"
                android:text="New Deadline"
                android:textAlignment="center"
                android:textColor="@color/floralWhite"
                android:textSize="30sp"
                android:textStyle="bold"/>




        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Label:"
                            android:textColor="@color/midnightBlue"
                            android:textSize="24sp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="78dp" />

                        <EditText
                            android:id="@+id/Label_Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:ems="10"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type:"
                            android:textColor="@color/midnightBlue"
                            android:textSize="24sp" />

                        <RadioGroup
                            android:id="@+id/Type_RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp">

                            <RadioButton
                                android:id="@+id/Quiz_RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quiz"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textColorHighlight="@android:color/black"
                                android:textColorLink="@android:color/transparent"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/Assignment_RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Assignment"
                                android:textColor="@android:color/background_dark"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/ProjectPhase_RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Project Phase"
                                android:textColor="@android:color/background_dark"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/Other_RadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Other.."
                                android:textColor="@android:color/background_dark"
                                android:textSize="14sp" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description:"
                            android:textColor="@color/midnightBlue"
                            android:textSize="24sp" />

                        <MultiAutoCompleteTextView
                            android:id="@+id/Desc_Txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/colorAccent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/DueDateText_New"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Due Date"
                    android:textColor="@color/midnightBlue"
                    android:textSize="24sp"
                     android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Reminder starts\nbefore:"
                        android:textColor="@color/midnightBlue"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ElapsedDays_Text"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:ems="9"
                            android:inputType="number"
                            android:textColor="@android:color/background_dark" />

                        <TextView
                            android:id="@+id/txtView151"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Days"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/midnightBlue"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp"
                android:id="@+id/Add_Card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/textViewBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Add"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>


